{
  "name": "asm-ca",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "proxy": "http://localhost:5146",
  "scripts": {
    "dev": "concurrently \"yarn tailwind:watch\" \"yarn custom:watch\" \"dotnet run --project WebAppMVC/WebAppMVC.csproj\" \"yarn workspace techdocs start\" --kill-others-on-fail",
    "frontend": "concurrently  \"yarn tailwind:watch\" \"yarn custom:watch\" \"yarn workspace techdocs start\" --kill-others-on-fail",
    "watch": "concurrently \"yarn workspace techdocs\" \"dotnet watch run --project WebAppMVC/WebAppMVC.csproj\"",
    "dotnetwatchtest": "dotnet watch test --project WebAppMVC/WebAppMVC.csproj",
    "tailwind:watch": "npx tailwindcss -i ./WebAppMVC/wwwroot/css/tailwind.scss -o ./WebAppMVC/wwwroot/css/site.css --watch",
    "custom:watch": "npx tailwindcss -i ./WebAppMVC/wwwroot/css/custom.scss -o ./WebAppMVC/wwwroot/css/custom.css --watch",
    "css:concurrently": "concurrently --names \"TAILWIND,CUSTOM\" \"yarn tailwind:watch\" \"yarn custom:watch\"",
    "techdocs:start": "yarn workspace techdocs start",
    "techdocs:build": "yarn workspace techdocs build",
    "techdocs:serve": "yarn workspace techdocs serve",
    "techdocs:swizzle": "yarn workspace techdocs swizzle",
    "techdocs:deploy": "yarn workspace techdocs deploy",
    "watchapp": "dotnet watch run --project WebAppMVC/WebAppMVC.csproj --urls http://localhost:5146 --verbose",
    "restart:apps": "yarn workspace techdocs restart && yarn workspace WebAppMVC restart",
    "restart:base": "bash ./scripts/restart.sh",
    "restart:basejs": "node ./scripts/restart.js",
    "restart:all": "concurrently \"yarn restart:base\" \"yarn restart:apps\"",
    "clean": "npx rimraf node_modules",
    "testapp": "dotnet watch test --project WebAppMVC/WebAppMVC.csproj"
  },
  "workspaces": [
    "WebAppMVC",
    "ASafariM/Frontends/techdocs"
  ],
  "devDependencies": {
    "@types/node": "^22.8.7",
    "concurrently": "^9.0.1",
    "rimraf": "^6.0.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "sass": "^1.80.6",
    "tailwindcss": "^3.4.14"
  },
  "packageManager": "yarn@1.22.22",
  "dependencies": {
    "@docusaurus/core": "^3.6.1",
    "@docusaurus/module-type-aliases": "^3.6.1",
    "@docusaurus/plugin-content-blog": "^3.6.1",
    "@docusaurus/preset-classic": "^3.6.1",
    "@docusaurus/remark-plugin-npm2yarn": "^3.6.1",
    "@docusaurus/tsconfig": "^3.6.1",
    "@docusaurus/types": "^3.6.1"
  }
}