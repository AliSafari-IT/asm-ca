@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "(Re)send Email Confirmation";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-md shadow-md w-full max-w-lg">
        <h1 class="text-2xl font-bold text-center mb-6">@ViewData["Title"]</h1>
        <h2 class="text-xl text-center mb-4 text-gray-700">Enter your email to receive a confirmation link.</h2>
        <hr class="mb-6" />

        <form method="post">
            <div asp-validation-summary="All" class="text-red-600 mb-4 text-center" role="alert"></div>
            <div class="form-floating mb-4">
                <input asp-for="Input.Email" class="form-control block w-full px-4 py-3 text-base border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label text-gray-600 ml-2">Email</label>
                <span asp-validation-for="Input.Email" class="text-red-600 block mt-1"></span>
            </div>
            <button type="submit" class="w-full bg-blue-600 text-white font-semibold rounded-md py-3 hover:bg-blue-700 transition duration-200">
                Resend Confirmation Link
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
