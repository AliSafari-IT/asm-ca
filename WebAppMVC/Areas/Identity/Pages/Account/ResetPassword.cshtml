@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-md shadow-md w-full max-w-md">
        <h1 class="text-2xl font-bold mb-2 text-center">@ViewData["Title"]</h1>
        <h2 class="text-lg text-center mb-4">Reset your password</h2>
        <hr class="mb-6" />

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />

            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.Email" class="form-input w-full px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.Password" type="password" class="form-input w-full px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" autocomplete="new-password" aria-required="true" placeholder="Enter new password" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-input w-full px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" autocomplete="new-password" aria-required="true" placeholder="Confirm your password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded-md text-lg font-medium hover:bg-indigo-700 transition duration-300 ease-in-out">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
