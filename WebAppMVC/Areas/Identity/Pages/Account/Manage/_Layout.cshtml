@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="w-full min-h-screen bg-gradient-to-br from-blue-50 to-blue-200 py-10">
    <div class="container mx-auto max-w-6xl px-4">
        <!-- Page Title -->
        <h2 class="text-3xl font-bold text-gray-800 mb-6">Change Your Account Settings</h2>
        <hr class="mb-10 border-gray-300">

        <!-- Two Column Layout -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Navigation Column -->
            <div class="md:col-span-1 bg-white p-6 shadow-lg rounded-lg">
                <partial name="_ManageNav" />
            </div>

            <!-- Main Content Column -->
            <div class="md:col-span-2 bg-white p-8 shadow-lg rounded-lg">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
