@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="flex flex-col items-center justify-center py-12 px-6 lg:px-8 bg-gradient-to-b from-blue-50 to-blue-400">
    <div class="w-full max-w-xl bg-white shadow-lg rounded-lg p-6">
        <!-- Title -->
        <h3 class="text-2xl font-bold text-gray-800 mb-4 text-center">@ViewData["Title"]</h3>

        <!-- Description -->
        <p class="text-gray-700 mb-4">
            Your account contains personal data that you have given us. This page allows you to download or delete that data.
        </p>
        <p class="text-red-600 font-semibold mb-6">
            Deleting this data will permanently remove your account, and this cannot be recovered.
        </p>

        <!-- Download Data Form -->
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-4">
            <button class="w-full py-3 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-400" type="submit">
                Download Data
            </button>
        </form>

        <!-- Delete Data Link -->
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="w-full block text-center py-3 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-600 transition-colors focus:outline-none focus:ring-2 focus:ring-red-400">
                Delete Personal Data
            </a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
