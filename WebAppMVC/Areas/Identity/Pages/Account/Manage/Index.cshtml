@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-blue-200 flex items-center justify-center py-10">
    <div class="container max-w-6xl mx-auto px-4"> 
        <!-- Page Title -->
        <h1 class="text-4xl font-bold text-center text-gray-800 mb-10">User Profile</h1>

        <!-- Two-Column Layout -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Left Card: Profile Information -->
            <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-2xl transform transition duration-300 hover:scale-105">
                <h2 class="text-2xl font-semibold text-gray-700 mb-4">Profile Information</h2>
                <form id="profile-form" method="post" class="space-y-5">
                    <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>

                    <!-- Username Field -->
                    <div>
                        <label asp-for="Username" class="block text-sm font-medium text-gray-600 mb-1">Username</label>
                        <input asp-for="Username" class="w-full p-3 border border-gray-300 rounded-md bg-gray-100 text-gray-700" placeholder="Username" disabled />
                    </div>

                    <!-- Phone Number Field -->
                    <div>
                        <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-600 mb-1">Phone Number</label>
                        <input asp-for="Input.PhoneNumber" class="w-full p-3 border border-gray-300 rounded-md focus:border-blue-500 focus:ring-2 focus:ring-blue-200" placeholder="Enter your phone number" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Save Button -->
                    <button type="submit" class="w-full py-3 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition-colors">Save Changes</button>
                </form>
            </div>

            <!-- Right Card: Recent Activity & Info -->
            <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-2xl transform transition duration-300 hover:scale-105">
                <h2 class="text-2xl font-semibold text-gray-700 mb-4">Recent Activity</h2>
                <div class="space-y-4">
                    <div class="flex items-center space-x-3">
                        <span class="w-4 h-4 bg-green-500 rounded-full"></span>
                        <p class="text-gray-700">Last login: March 15, 2024, 10:45 AM</p>
                    </div>
                    <div class="flex items-center space-x-3">
                        <span class="w-4 h-4 bg-blue-500 rounded-full"></span>
                        <p class="text-gray-700">Updated phone number</p>
                    </div>
                    <div class="flex items-center space-x-3">
                        <span class="w-4 h-4 bg-purple-500 rounded-full"></span>
                        <p class="text-gray-700">Changed password</p>
                    </div>
                </div>
                <a href="/account/activity-log" class="inline-block mt-5 text-blue-500 hover:underline">View full activity log</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
