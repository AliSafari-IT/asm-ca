{
  "name": "WebAppMVC",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "run:razor": "dotnet run --project ./WebAppMVC.csproj",
    "build": "dotnet build ./WebAppMVC.csproj",
    "css:build": "npx tailwindcss -i ./wwwroot/css/tailwind.scss -o ./wwwroot/css/site.css --minify",
    "css:watch": "npx tailwindcss -i ./wwwroot/css/tailwind.scss -o ./wwwroot/css/site.css  --minify --watch",
    "restart": "bash ./scripts/restart.sh",
    "clean": "npx rimraf node_modules"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "sass": "^1.80.6",
    "tailwindcss": "^3.4.14"
  }
}
