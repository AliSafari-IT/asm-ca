<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Tailwind CSS -->
    <link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true" />
    <!-- Additional custom CSS -->
    <link href="~/css/custom.min.css" rel="stylesheet" asp-append-version="true" />
</head>

<body class="min-h-screen flex flex-col bg-gray-100 text-gray-900">
    <!-- Navbar at the top -->
    <header class="w-full bg-white shadow">
        <partial name="_NavbarPartial" />
    </header>

    <!-- Main content fills available space and centers content vertically -->
    <main role="main" class="flex-grow flex items-center justify-center">
        @RenderBody()
    </main>

    <!-- Footer at the bottom -->
    <footer class="w-full bg-gray-200 py-4 text-center text-sm text-gray-700 border-t">
        <div class="container mx-auto max-w-4xl">
            &copy; 2024 - WebAppMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy"
                class="text-blue-500 hover:underline">Privacy</a>
        </div>
    </footer>

    <!-- No Bootstrap or jQuery -->
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
